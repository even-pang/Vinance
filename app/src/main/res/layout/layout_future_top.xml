<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/future_top_tab"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/background_top_tab"
    android:orientation="horizontal"
    android:padding="1dp"
    android:weightSum="100">

    <TextView
        style="@style/NormalTabText"
        android:layout_margin="1.5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="27"
        android:background="@drawable/background_top_tab_clicked"
        android:gravity="center"
        android:text="@string/usds_m"
        android:textColor="@color/white" />

    <TextView
        style="@style/NormalTabText"
        android:layout_margin="1.5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="27"
        android:gravity="center"
        android:text="@string/coin_m" />

    <TextView
        style="@style/NormalTabText"
        android:layout_margin="1.5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="22"
        android:gravity="center"
        android:text="@string/option" />

    <TextView
        style="@style/NormalTabText"
        android:layout_margin="1.5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:gravity="center"
        android:text="@string/battle" />
</LinearLayout>