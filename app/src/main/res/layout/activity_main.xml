    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/guideline_horizontal_right"
        app:layout_constraintStart_toStartOf="@id/guideline_horizontal_left"
        app:layout_constraintTop_toBottomOf="@id/main_top_tab">
        <!-- LEFT -->
        <ImageView
            android:id="@+id/exchange"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/future_ic_dialog_exchange"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- RIGHT -->

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/binance_plex_medium"
            android:text="BTCUSDT"
            android:textColor="#FFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@id/exchange"
            app:layout_constraintLeft_toRightOf="@id/exchange"
            app:layout_constraintStart_toEndOf="@+id/exchange"
            app:layout_constraintTop_toTopOf="@id/exchange"
            app:layout_constraintVertical_bias="0.583" />

        <TextView
            android:id="@+id/main_title_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/binance_plex_regular"
            android:text="-0.07%"
            android:textColor="#2EBD86"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintLeft_toRightOf="@id/title" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/binance_plex_regular"
            android:text="무기한"
            android:textColor="#FFF"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@id/exchange"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <ImageView
            android:id="@+id/main_more"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/dotdotdot"
            app:layout_constraintBottom_toBottomOf="@id/exchange"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/exchange"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/main_convert"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/fireagg"
            app:layout_constraintBottom_toBottomOf="@id/exchange"
            app:layout_constraintRight_toLeftOf="@id/main_more"
            app:layout_constraintTop_toTopOf="@id/exchange"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/detail"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/candle"
            app:layout_constraintBottom_toBottomOf="@id/exchange"
            app:layout_constraintRight_toLeftOf="@id/main_convert"
            app:layout_constraintTop_toTopOf="@id/exchange"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--<include layout="@layout/layout_title"
        android:id="@+id/status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_top_tab"
