<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171E26"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".view.MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97" />

    <LinearLayout
        android:id="@+id/main_top_tab"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/background_top_tab"
        android:orientation="horizontal"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1F2630"
            android:fontFamily="@font/binance_plex_medium"
            android:gravity="center"
            android:text="@string/top_tab1_title"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/binance_plex_light"
            android:gravity="center"
            android:text="@string/top_tab2_title"
            android:textColor="#878E96"
            android:textSize="14dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/binance_plex_light"
            android:gravity="center"
            android:text="@string/top_tab3_title"
            android:textColor="#878E96"
            android:textSize="14dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/binance_plex_light"
            android:gravity="center"
            android:text="@string/top_tab4_title"
            android:textColor="#878E96"
            android:textSize="14dp" />
    </LinearLayout>


