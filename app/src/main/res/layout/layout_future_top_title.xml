<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/future_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="18dp"
    android:paddingBottom="18dp"
    android:paddingTop="12dp">

    <ImageView
        android:id="@+id/exchange"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_title_left"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="@id/future_title_coin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/future_title_coin" />


    <!--<item name="android:textColor">@color/white</item>
    <item name="android:textSize">22sp</item>-->
    <TextView
        android:id="@+id/future_title_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plex_medium"
        android:paddingStart="2dp"
        android:text="BTC"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:letterSpacing="0.05"
        app:layout_constraintLeft_toRightOf="@id/exchange"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/future_title_tether"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/future_title_coin"
        android:paddingEnd="4.25dp"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:letterSpacing="0.02"
        android:fontFamily="@font/plex_medium"
        android:textStyle="bold"
        android:text="USDT" />


    <TextView
        android:id="@+id/future_title_percentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/binance_plex_medium"
        android:paddingHorizontal="2.5dp"
        android:text="-0.07%"
        android:textColor="#2EBD86"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/future_title_coin"
        app:layout_constraintEnd_toStartOf="@id/future_menu_1"
        app:layout_constraintStart_toEndOf="@id/future_title_tether" />

    <TextView
        android:id="@+id/perpetual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:fontFamily="@font/binance_plex_regular"
        android:paddingStart="1dp"
        android:paddingEnd="3dp"
        android:paddingBottom="2.5dp"
        android:text="@string/perpetual"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/exchange"
        app:layout_constraintTop_toBottomOf="@id/future_title_coin" />

    <ImageView
        android:id="@+id/future_menu_3"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_menu_3"
        app:layout_constraintBottom_toBottomOf="@id/future_title_coin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/future_title_coin" />

    <ImageView
        android:id="@+id/future_menu_2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_menu_2"
        android:layout_marginEnd="19dp"
        app:layout_constraintBottom_toBottomOf="@id/future_title_coin"
        app:layout_constraintRight_toLeftOf="@id/future_menu_3"
        app:layout_constraintTop_toTopOf="@id/future_title_coin" />

    <ImageView
        android:id="@+id/future_menu_1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_menu_1"
        android:layout_marginEnd="18dp"
        app:layout_constraintBottom_toBottomOf="@id/future_title_coin"
        app:layout_constraintRight_toLeftOf="@id/future_menu_2"
        app:layout_constraintTop_toTopOf="@id/future_title_coin" />
</androidx.constraintlayout.widget.ConstraintLayout>
