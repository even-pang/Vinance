<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Vinance" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/default_background</item>
        <!--        <item name="colorPrimaryVariant">@color/white</item>-->
        <item name="colorOnPrimary">@color/white</item>

        <!--        <item name="colorSecondary">@color/teal_200</item>-->
        <!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <!--        <item name="colorOnSecondary">@color/black</item>-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/text_normal</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <item name="android:fontFamily">@font/plex_regular</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:windowBackground">@color/default_background</item>

        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">false</item>
    </style>

    <style name="TabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@null</item>
        <item name="tabGravity">start</item>
        <item name="tabIndicator">@drawable/border_indicator</item>
        <item name="tabIndicatorColor">@color/selected</item>
        <item name="tabMode">scrollable</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextColor">@color/text_normal</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/TabFont</item>
        <item name="tabMinWidth">0dp</item>
    </style>

    <style name="WalletTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@null</item>
        <item name="tabGravity">start</item>
        <item name="tabIndicator">@drawable/border_indicator</item>
        <item name="tabIndicatorColor">@color/selected</item>
        <item name="tabMode">scrollable</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextColor">@color/text_normal</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/TabFont</item>
        <item name="tabMinWidth">0dp</item>
<!--        <item name="tabPaddingStart">0dp</item>-->
<!--        <item name="tabPaddingEnd">0dp</item>-->
    </style>

    <style name="TabText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/plex_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TradeTabText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/plex_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Font.SemiBold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/plex_semi_bold</item>
    </style>

    <style name="Font.Regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/plex_regular</item>
    </style>

    <style name="Font.Light" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/plex_medium</item>
    </style>

    <style name="Font.Medium" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/plex_medium</item>
    </style>

    <style name="Font.DinPro" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/din_pro_regular</item>
    </style>

    <style name="TabFont" parent="Font.SemiBold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PositionExclaimImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_weight">1</item>
        <item name="tint">@color/exclaim_dark_color</item>
        <item name="android:src">@drawable/ic_exclaim_mark</item>
    </style>

    <style name="PositionExclaimText" parent="Font.DinPro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/deep_grey</item>
        <item name="android:textSize">@dimen/text_bigger</item>
        <item name="android:text">@string/exclaim</item>
    </style>

    <style name="BottomNavigation" parent="@style/ThemeOverlay.MaterialComponents">
        <item name="android:fontFamily">@font/plex_regular</item>
        <item name="android:background">@color/card_color</item>
    </style>

    <style name="TextUnderlineDashed" parent="Font.Regular">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/underline_dashed</item>
        <item name="android:textColor">@color/default_grey</item>
    </style>

    <style name="BottomBackground" parent="@style/ThemeOverlay.MaterialComponents">
        <item name="android:background">@drawable/background_primary</item>
    </style>

    <style name="SeekLine">
        <item name="android:background">#333B46</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="SeekItemSize">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="OrderLeftText">
        <item name="android:fontFamily">@font/plex_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">1.3dp</item>
        <item name="android:paddingBottom">1.3dp</item>
        <item name="android:layout_marginTop">0.2dp</item>
        <item name="android:layout_marginBottom">0.2dp</item>
    </style>

    <style name="OrderRightText">
        <item name="android:fontFamily">@font/plex_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="OverViewRight">
        <item name="android:fontFamily">@font/plex_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="OrderOffset">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="NormalTabText" parent="Font.Regular">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="FutureFundingAndCount" parent="Font.Regular">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CostText" parent="Font.Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonText" parent="Font.Medium">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleText" parent="Font.SemiBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SecondTitleText" parent="TitleText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NormalText" parent="Font.Medium">
        <item name="android:textColor">@color/default_grey</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="PositionInfoTitle" parent="NormalText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PositionInfoMargin" parent="NormalText">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="MainBottomNavigation" parent="@style/TextAppearance.AppCompat">
        <item name="android:drawablePadding">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/deep_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RecycleTextStyle" parent="android:TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FEF7DC</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="BrightSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OverviewLeft">
        <item name="android:fontFamily">@font/plex_medium</item>
        <item name="android:textColor">@color/default_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OverviewImageSize">
        <item name="android:layout_width">21dp</item>
        <item name="android:layout_height">21dp</item>
    </style>

    <style name="TradeSize">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/plex_regular</item>
    </style>
</resources>