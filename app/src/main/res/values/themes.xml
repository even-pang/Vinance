<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 라이트 모드 -->
    <style name="Theme.Vinance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/topColor</item>

        <!-- attr 정의 색상 구현 -->
        <item name="topColor">#FFF5F5F5</item>
        <item name="bottomColor">#FFFFFFFF</item>
        <item name="bottomBackgroundPrimary">?attr/topColor</item>
        <item name="bottomBackgroundSecondary">#FFEBECF0</item>
        <item name="borderColor">#FFE9E9E9</item>

        <!-- 커스텀 스타일 -->
<!--        <item name="android:windowBackground">?attr/topColor</item>-->

<!--        <item name="android:textColorPrimary">@color/black</item>-->
<!--        <item name="tabSelectedTextColor">@color/black</item>-->
        <item name="colorSurface">?attr/bottomColor</item>
    </style>

    <style name="Text.Regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/plex_regular</item>
    </style>

    <style name="BottomNavigation" parent="@style/ThemeOverlay.MaterialComponents">
        <item name="android:fontFamily">@font/plex_regular</item>
        <item name="android:background">?attr/bottomColor</item>
    </style>

    <style name="TextUnderlineDashed" parent="android:TextAppearance">
        <item name="android:background">@drawable/underline_dashed</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="BottomBackground" parent="@style/ThemeOverlay.MaterialComponents">
        <item name="android:background">@drawable/background_primary</item>
    </style>
</resources>